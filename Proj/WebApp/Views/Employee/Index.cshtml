@model List<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>Employee List</h1>

@* <a href="/Department/Add" class="btn btn-success"> New </a> *@

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Salary</th>
            <th>JobTitle</th>
            <th>Edit  </th>
            <th>Delete</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Salary</td>
                <td>@item.JobTitle</td>
                <td><a href="/Employee/Edit/@item.Id">Edit</a></td>
                <td><a href="/Employee/Delete/@item.Id">Delete</a></td>

            </tr>
        }
    </tbody>
</table>




