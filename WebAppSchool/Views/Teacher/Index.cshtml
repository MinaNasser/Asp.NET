@using Models.Entities;
@model List<Teacher>
<nav>
    <a class="btn btn-success" href="@Url.Action("Index", "Teacher")">View Teachers</a>
    <a class="btn btn-success" href="@Url.Action("Index", "Student")">View Students</a>
    <a class="btn btn-success" href="@Url.Action("Index", "Course")">View Coursees</a>
</nav>
<h1>Our Teacher</h1>

<table class="table table-dark table-bordered table-striped">
    <thead>
        <tr>
            <th>Teacher ID</th>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Email</th>
            <th>Phone</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.TeacherId</td>
                <td>@teacher.Name</td>
                <td>@teacher.Subject</td>
                <td>@teacher.Email</td>
                <td>@teacher.phone</td>
            </tr>
        }
    </tbody>
</table>
